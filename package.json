{
  "name": "write-api-doc",
  "version": "1.0.4",
  "description": "write api doc,it can be a tool for apidoc",
  "main": "dist/write-api-doc.common.js",
  "module": "dist/write-api-doc.esm.js",
  "unpkg": "dist/write-api-doc.js",
  "scripts": {
    "dev:dist": "rollup -wm --config build/rollup.dev.config.js",
    "build": "node build/rollup.pro.config.js",
    "lint": "eslint src test",
    "test:unit": "rollup --config build/rollup.dev.config.js && mocha --require babel-core/register",
    "format": "prettier --write \"src/*.js\" \"test/**/*.js\"",
    "release": "bash build/release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymc-github/write-api-doc.git"
  },
  "author": "yemiancheng <ymc.github@gmail.com> (https://github.com/YMC-GitHub)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ymc-github/write-api-doc/issues"
  },
  "homepage": "https://github.com/ymc-github/write-api-doc#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "3.0.1",
    "lint-staged": "9.2.0",
    "mocha": "^6.2.0",
    "mochawesome": "^4.0.1",
    "prettier": "^1.14.3",
    "rollup": "1.17.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-replace": "^2.0.0",
    "uglify-js": "^3.1.2"
  },
  "lint-staged": {
    "src/*.{js,json,css}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "dist",
    "package.json",
    "readme.md",
    "doc-usage-**"
  ]
}
